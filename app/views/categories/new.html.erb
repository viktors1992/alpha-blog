<h1 class = "text-center mt-4">Create new category</h1>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
        <%= render 'shared/errors', obj: @category %>   
            <%= form_with(model: @category, class: "shadow p-3 mb-5 bg-info rounded", local: true)  do |f| %>
            <div class="form-group row">    
                <%= f.label :name, "Category name", class: "col-2 col-form-label text-light" %>
                <div class="col-10">
                    <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
                </div>
            </div>
        

            <div class="form-group row justify-content-center mb-3"> 
                <%= f.submit class:"btn btn-outline-light btn-lg" %>
            </div>
            <% end %>
        </div>
            <div class="mb-3">
                <%=link_to '[ Back ]', articles_path, class:"text-center text-info " %> 
            </div>    
    </div>
</div>
